<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rt"
    tools:context=".dashboardactivity">

    <androidx.cardview.widget.CardView
        android:layout_width="384dp"
        android:layout_height="304dp"
        android:layout_margin="20dp"
        android:background="@drawable/r6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/g6" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Please share this code with your friends to start the meeting" />

            <EditText
                android:id="@+id/cobebox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:background="#BCB4B4"
                android:ems="10"
                android:hint="Meeting Code"
                android:inputType="textPersonName"
                android:padding="10dp"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/joinbutton"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/textbox1"
                    android:drawableLeft="@drawable/ic_baseline_desktop_windows_24"
                    android:gravity="center"
                    android:text="Join"
                    android:textSize="18sp"
                    app:backgroundTint="#2196F3" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>